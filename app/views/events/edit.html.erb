<h3> Edit <%= @event.name %> </h3>
  <%= form_for @event do |f| %>
  <%= f.text_field :name, :placeholder => @event.name %>
  <br>
  <%= f.text_field :image, :placeholder => @event.image %>
  <br>
  <%= f.text_field :location, :placeholder => @event.location %>
  <br>
  <%= f.text_field :external_link, :placeholder => @event.external_link %>
  <br>
  <%= f.date_select :date_of_event %>
  <br>
  <%= f.text_area :description, :placeholder => @event.description %>
  <br>
  <%= f.number_field :min_users, :placeholder => @event.min_users %>
  <br>
  <%= f.number_field :max_users, :placeholder => @event.max_users %>
  <br>
  <%= f.submit %>
  <% end %>
  <br>

<%= link_to "[take me back to my profile]", user_path(current_user) %>
<br>
<%= link_to "[see my existing events]", events_path %> 
<br>
<%= link_to "[DELETE]", event_path(@event), :method => :delete %> 