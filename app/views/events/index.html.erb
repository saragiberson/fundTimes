<h1 class="page-header">All Events </h1> 
 <div class="text-right main-color"><%= link_to "CREATE NEW >", new_event_path %><br /></div>
  <div class="masonry js-masonry"  data-masonry-options='{ "isFitWidth": true, "gutter": 10}'>
    <% Event.all.each do |event| %>
      <%= link_to event_path(event) do %>
     <div class="item" style="background-image: url(<%= event.image %>);">
      <div class="event-name">
        <h3><%= event.name %></h3>
      </div>
    </div>
      <% end %>
    <% end %>
  </div>