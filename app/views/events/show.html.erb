<h2> <%= @event.name %> </h2>
 <figure><%= image_tag @event.image %></figure>

 <%= button_to "Join this!", event_join_path(@event.id) %>
  <ul> 
    <li>Where? : <%= @event.location %></li>
    <li>When? : <%= @event.date_of_event %></li>
    <li>How many people are going: 
      <% if @event.total_guests.count == 0 %>
        <%= 1 %>
      <% else %> 
        <%= @event.total_guests.count %>
      <% end %>
    </li>
    <li>How much total? : $<%= @event.total_price %></li>
    <li>How much per person? : $<%= @event.price_per_person %></li>
  </ul>

  <h3>What are we planning?!</h3>
    <p><%= @event.description %></p>
<p> Read more: <%= link_to @event.external_link %> </p>

<%= link_to "[take me back to my profile]", user_path(current_user) %>
<br>
<%= link_to "[see my existing events]", events_path %> 
<br>
<%= link_to "[EDIT this event]", edit_event_path(@event) %> 
<br>
<%= link_to "[DELETE]", event_path(@event), :method => :delete, confirm: "Are you sure?" %> 
